<section class="hero py-16">
    <div class="container mx-auto flex items-center justify-between">
        <div class="w-1/2">
            <h6 class="text-lg"><em>Are you Foodie?</em></h6>
            <h1 class="text-3xl md:text-6xl font-bold">Let's Eat!</h1>
            <% if(user){ %>
            <% if(user.role == 'admin'){ %>
            <button class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary"><a href="/admin/addMenu">Add Menu</a></button>
            <% } else{ %>
            <button class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary"><a href="#menu">Order Now</a></button>
            <% } %>   
            <% } else{ %>    
            <button class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary"><a href="#menu">Order Now</a></button>
            <% } %>
        </div>
        <div class="w-1/2">
            <img src="/images/pizza.png" alt="">
        </div>
    </div>
</section>
<section id="menu" class="menu container mx-auto py-8">
    <h1 class="text-xl font-bold mb-8">Menu</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 col-gap-12 row-gap-16">
        <% foods.forEach((food) => { %>
            <div class="w-full md:w-64">
                <img class="h-40 mx-auto mb-4" src="/images/<%= food.image%>" alt="">
                <div class="text-center"> 
                    <h2 class="mb-4 text-lg"><%= food.name%></h2>
                    <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= food.size%></span>
                    <div class="flex items-center justify-around mt-6">
                        <span class="font-bold text-lg">â‚¹<%= food.price%></span>
                        <button data-food="<%= JSON.stringify(food)%>" class="add-to-cart cart-btn py-1 px-6 rounded-full flex items-center font-bold">
                            <span>+</span>
                            <span class="ml-4">Add</span>
                        </button>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</section>